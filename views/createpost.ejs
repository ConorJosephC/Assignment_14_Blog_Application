<html>

<head>

  <title>Create Post</title>

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="stylesheet" href="src/style.css">

</head>

<body>

  <%- include partials/navbar.ejs %>

  <h1>Post to your blog</h1>
  <h2>Fill in the form below</h2>

  <form id="createpost" action="/createpost" method="POST" autocomplete="off">

    <div class="form-group">
      <label for="post_username">Enter username:</label><br>
      <input type="text" name="post_username" class="form-control" id="post_username" aria-describedby="postusernameHelp" placeholder="Enter username">
            </div>

      <div class="form-group">
        <label for="post_title">Title for your Post:</label><br>
        <input type="text" name="post_title" class="form-control" id="post_title" aria-describedby="postTitleHelp" placeholder="Enter Title for Post">
      </div>

        <div class="form-group">
          <label for="post_content">Post Message</label>
          <textarea type="text" name="post_content" class="form-control" id="post_content" aria-describedby="postMessageHelp" maxlength="1000" cols="25" rows="6" placeholder="Type Your Message Here"></textarea>
        </div>

        <div class="form-group">
          <input type="submit" value="Submit">
      </div>

  </form>

  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

</body>

</html>
